<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_40">
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/title_ib_back"
            android:background="?attr/colorPrimary"
            android:src="@mipmap/topnav_icon_back"
            android:layout_width="@dimen/item_height_60"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/title_tv_title"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_s16"
            android:text="标题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/title_right"
            android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
            android:textAlignment="gravity"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/title_right_ib"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/title_right_tv"
                android:background="?attr/colorPrimary"
                android:src="@mipmap/topnav_icon_load"
                android:layout_width="@dimen/item_height_30"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="加载"
                android:id="@+id/title_right_tv"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:visibility="visible"
                android:layout_width="@dimen/item_height_40"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>