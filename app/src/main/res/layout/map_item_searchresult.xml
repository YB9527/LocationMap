<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/item"
    android:orientation="horizontal"
    style="@style/itemsylte"
    >
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="60dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv1"
            android:text="NO."
            android:layout_toLeftOf="@id/index"
            style="@style/itemtext2style"
            />
        <TextView
            android:id="@+id/index"
            android:text="123"
            android:layout_alignParentRight="true"
            style="@style/itemtext2style"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            style="@style/itemtitlestyle"
            android:text="表格名称"
            />
        <TextView
            android:id="@+id/info"
            android:layout_below="@+id/title"
            android:text="详情"
            style="@style/itemtext2style"
            />

        <LinearLayout
            android:id="@+id/item_info"
            android:layout_toLeftOf="@+id/item_media"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <TextView
                style="@style/itemtext2style"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="详情"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_media"
            android:layout_toLeftOf="@+id/item_location"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <TextView
                style="@style/itemtext2style"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="多媒体"
                />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/item_location"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <TextView
                android:text="定位"
                style="@style/itemtext2style"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>



        <!--<ImageView
            android:id="@+id/iv_location"
            android:src="@mipmap/leftnav_icon_setting_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />-->
    </RelativeLayout>



</LinearLayout>