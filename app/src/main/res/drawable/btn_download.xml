<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape  >
            <corners
                android:bottomLeftRadius="50.0dip"
                android:bottomRightRadius="50.0dip"
                android:topLeftRadius="50.0dip"
                android:topRightRadius="50.0dip" />
            <!-- 背景色 -->
            <solid android:color="@color/colorPrimaryDark"/>
            <!-- 边框色 -->
            <stroke android:width="0.5dip" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- 背景色 -->
            <solid android:color="#00000000"/>
            <corners
                android:bottomLeftRadius="50.0dip"
                android:bottomRightRadius="50.0dip"
                android:topLeftRadius="50.0dip"
                android:topRightRadius="50.0dip" />
            <!-- 边框色 -->
            <stroke android:width="1dip" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</selector>

